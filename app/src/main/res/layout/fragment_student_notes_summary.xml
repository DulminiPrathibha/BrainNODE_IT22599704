<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- App Name -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="BrainNODE"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ivAppIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivAppIcon"
        app:layout_constraintStart_toEndOf="@id/ivAppIcon" />

    <!-- Lesson Title Badge -->
    <TextView
        android:id="@+id/tvLessonBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/lesson_badge_background"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:text="OS : Lesson 1"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivAppIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Summary Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSummaryContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFF5F0"
        app:layout_constraintTop_toBottomOf="@id/tvLessonBadge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvSummaryContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="An operating system (OS) is the core software that connects hardware and applications, making computers usable. It manages resources like CPU, memory, and devices so multiple programs can run smoothly and safely. The OS also handles processes, scheduling tasks and isolating failures, and provides security through user accounts and access control. Different OS types exist for personal computers, mobiles, servers, and embedded systems, but all share the same goal: ensuring efficiency, stability, and usability."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- TTS Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvTTSButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FF6B35"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/cvSummaryContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingTop="12dp"
            android:paddingEnd="32dp"
            android:paddingBottom="12dp"
            android:text="TTS"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <!-- Bottom Illustration -->
    <ImageView
        android:id="@+id/ivBottomIllustration"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/summary_page_illustation"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/cvTTSButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
